<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	
	 <bean id="computer" class="modelo.entidad.Computer">
        <property name="peripheralList">
            <list>
                <ref bean="peripheral1" />
                <ref bean="peripheral2" />
            </list>
        </property>
        <property name="cpu" ref="cpu"/>
        <property name="graphicCard" ref="graphicCard"/>
        <property name="motherBoard" ref="motherBoard"/>
        
        <property name="ramList">
            <list>
                <ref bean="ram" />
            </list>
        </property>
    </bean>

<bean id="peripheral1" class="modelo.entidad.Peripheral">
    <property name="manufacturer" value="Dell" />
    <property name="price" value="50" />
    <property name="type" value="Mouse" />
</bean>

<bean id="peripheral2" class="modelo.entidad.Peripheral">
    <property name="manufacturer" value="Logitech" />
    <property name="price" value="70" />
    <property name="type" value="Keyboard" />
</bean>
	
	<bean id="cpu" class="modelo.entidad.Cpu">
		<property name="manufacturer" value="Dell"></property>
		<property name="model" value="0236LL"></property>
		<property name="numberOfCores" value="5"></property>
		<property name="price" value="1000"></property>
		
	</bean>
	
	<bean id="graphicCard" class="modelo.entidad.GraphicCard">
		<property name="manufacturer" value="asus"></property>
		<property name="model" value="0526LL"></property>
		<property name="CUDACores" value="20"></property>
		<property name="price" value="100"></property>
		<property name="ram" ref="ram"></property>
		
	</bean>
	
	<bean id="motherBoard" class="modelo.entidad.MotherBoard">
		<property name="manufacturer" value="Dell"></property>
		<property name="price" value="558"></property>
		<property name="formFactor" value="Chachi"></property>
		
	</bean>
	
	
	
	<bean id="ram" class="modelo.entidad.Ram">
        <property name="manufacturer" value="Dell"/>
        <property name="price" value="580"/>
        <property name="size" value="16"/>
    </bean>
	
</beans>
